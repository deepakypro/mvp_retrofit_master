<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:cardview="http://schemas.android.com/tools"
  style="@style/rapple_effect"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
android:layout_marginTop="@dimen/dimen10dp"
  android:layout_marginStart="@dimen/dimen10dp"
  android:layout_marginEnd="@dimen/dimen10dp"
  app:cardCornerRadius="@dimen/dimen10dp"
  app:cardElevation="5dp"
  android:stateListAnimator="@animator/touch_to_lift"
  android:clickable="true"

 >

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/course_picture"
      android:layout_width="56dp"
      android:layout_height="56dp"
      android:layout_marginTop="@dimen/dimen20dp"
      android:layout_marginStart="10dp"

      />


    <TextView
      android:id="@+id/course_name"
      android:textStyle="bold"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/dimen10dp"
      android:layout_marginStart="@dimen/dimen20dp"
      android:layout_marginEnd="@dimen/dimen10dp"
      android:layout_toEndOf="@+id/course_picture"
      android:maxLines="2"

      android:textColor="@color/black"
      android:textSize="20sp"/>

    <TextView
      android:id="@+id/course_package"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/dimen10dp"


      android:layout_alignParentEnd="true"
      android:layout_below="@+id/course_name"
      android:textColor="@color/primaryColor"
      android:textSize="14sp"

      />

    <TextView

      android:id="@+id/course_price"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dimen20dp"
      android:layout_below="@+id/course_name"
      android:layout_toEndOf="@+id/course_picture"
      android:textColor="@color/secondaryColor"

      android:textSize="14sp"/>
    <TextView
      android:layout_marginBottom="@dimen/dimen10dp"
      android:id="@+id/course_desciption"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/dimen20dp"
      android:layout_marginEnd="@dimen/dimen10dp"
      android:layout_below="@+id/course_price"
      android:layout_toEndOf="@+id/course_picture"
      android:padding="5dp"

      android:textSize="14sp"

      />
  </RelativeLayout>

</android.support.v7.widget.CardView>